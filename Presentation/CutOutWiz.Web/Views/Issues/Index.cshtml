@model IEnumerable<CutOutWiz.Data.FileTracking>

@{
    ViewData["Title"] = "Issues";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}


 <style>
        body{
            background-color:#f2f3f5;
        }
    </style>

    <div class="row" style="margin-top:1%">


    <!--Start Middle section-->
    <div class="col-md-12" >
        <div class="d-flex flex-row">
        <div class="p-2">
            <h5 style="color: #125a31;"> Issue Information </h5></div>
                       
        <div class="p-2" >
        <hr id="lineipad" style="width: 960px;"></div>

        </div>
<div class="card">
    <div class="card-header">
         <div class="row">
             <div class="col-md-6">
                  <h3 style="float: left;">Issue List</h3>
            </div>
             <div class="col-md-6">
                   
            </div>
        </div>
    </div>
  <div class="card-body">
 <table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
               SL. NO.
            </th>
            <th>
               Location
            </th>  
            <th>
               Rejected Date
            </th>
            <th>
                Comment
            </th>
           
        @*    <th>
               No of Files
            </th>*@

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                #@i
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.ParentDirectory)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.ActionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
           
        </tr>
        i++;
}
    </tbody>
</table>
</div>
</div>

</div>
</div>