<div class="mibreit-thumbview">
  <div class="mibreit-thumbElement">
    <img src="~/images/gallery/image-placeholder-transparent.png" data-src="https://dprp12nc61odv.cloudfront.net/fit-in/300x0/Client%201/Brand%201/17-Jan-2022/For%20Approval/A163614-ADI-Catalog-FTW/image_2609038_20e4906f.png" width="100" height="80" alt="thumbnail" /> 
  </div>
  <div class="mibreit-thumbElement">
    <img src="~/images/gallery/image-placeholder-transparent.png" data-src="https://dprp12nc61odv.cloudfront.net/fit-in/300x0/Client%201/Brand%201/17-Jan-2022/For%20Approval/A163614-ADI-Catalog-FTW/image_2609038_20e4906f.png" width="100" height="80" alt="thumbnail" /> 
  </div>
  <div class="mibreit-thumbElement">
    <img src="~/images/gallery/image-placeholder-transparent.png" data-src="https://dprp12nc61odv.cloudfront.net/fit-in/300x0/Client%201/Brand%201/17-Jan-2022/For%20Approval/A163614-ADI-Catalog-FTW/image_2609038_20e4906f.png" width="100" height="80" alt="thumbnail" /> 
  </div>
</div>

<h3 id="full-gallery-title" class="mibreit-slideshow-title"></h3>

@section scripts{
    <script src="~/js/mibreitGallery.min.js"></script>

    <script>

        $(document).ready(function(){
            mibreitGallery.createGallery({

              // slideshow container
              slideshowContainer: "#full-gallery",

              // thumb view container
              thumbviewContainer: ".mibreit-thumbview",

              // image title container
              titleContainer: "#full-gallery-title",

              // determine whether to enable fullscreen mode
              allowFullscreen: !0,

              // image preloader
              preloadLeftNr: 2,
              preloadRightNr: 3

            })
        });

    </script>
}

