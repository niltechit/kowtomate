@using CutOutWiz.Data
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 1;
}
   <style>
        body{
            background-color:#f2f3f5;
        }
    </style>

    <div class="row" style="margin-top:1%">


    <!--Start Middle section-->
    <div class="col-md-12" >
        <div class="d-flex flex-row">
        <div class="p-2">
            <h5 style="color: #125a31;"> User Information </h5></div>
                       
        <div class="p-2" >
        <hr id="lineipad" style="width: 960px;"></div>

        </div>
 <div class="card">
    <div class="card-header">
         <div class="row">
             <div class="col-md-6">
                  <h3 style="float: left;">User List</h3>
            </div>
             <div class="col-md-6">
                   <a asp-action="Create" class="btn btn-sm btn-success" style="text-decoration: none; float: right;"><i class="bi bi-plus"></i>Create New</a>
            </div>
        </div>
     
    </div>
    <div class="card-body">
     <table class="table table-bordered table-striped table-hover">
     <thead>
                        <tr>
                            <th>
                                SL. No.
                            </th>
                             <th>
                                First Name
                            </th>
                             <th>
                               Last Name
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                Email
                            </th>
                             <th>
                                Company Name
                            </th>
                              <th>
                               Phone
                            </th>
                              <th>
                               Role Name
                            </th>

                        @*    <th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) 
                {
                        <tr>
                            <td>
                               #@i
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
           
                           <td>
                               <a href="Edit?username=@item.UserName" class="btn btn-primary">
                                   <i class="bi bi-pencil-square"></i>
                                             
                               </a>
                            @*    @Html.ActionLink("Edit", "Edit", new {  username=item.UserName  }) *@
                           @*     @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                              @*  @Html.ActionLink("Delete", "Delete", new {  username=item.UserName  })*@
                            </td>
                        </tr>
                        i++;
                }
    </tbody>
</table>
    </div>
  </div>
   </div>
  </div>



